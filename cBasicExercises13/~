#include"stdio.h"
main()
{
 int a[n],i,n,sum=0,over_ave=0,below_ave=0;
 float ave;
 scanf("%d",&n);
 for(i=0;i<n;i++)
 {
  scanf("%d",a[i]);
  sum=sum+a[i];
 }
 ave=sum*/n;
 
 for(i=0;i<n;i++)
 {
  if(a[i]>=ave)
   over_ave++;
  else
   below_ave++;
 }
 printf("%.2f\n",ave);
 printf("%.2f%\n%.2f%\n",over_ave*100/n,below_ave*100/n); 
}
